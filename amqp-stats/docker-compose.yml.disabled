version: "2"

services:
  amqp:
    image: ${AMQP_STATS_DOCKER_IMAGE}:${AMQP_STATS_DOCKER_TAG}
    restart: unless-stopped
    volumes:
      - ${MEDIA_PATH}:/data/sighthound/media:rw
      - ${LOG_PATH}:/data/sighthound/logs/mcp:rw
    env_file:
      - .env
    networks:
      - core_sighthound

networks:
  core_sighthound:
    external: true